<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_principal"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Botón para ir a la actividad de accesorios -->
    <Button
        android:id="@+id/btnAccesorios"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="@string/ver_accesorios"
        android:textColor="@color/morado_fondo"
        android:textSize="18sp"
        android:textStyle="bold" /> <!-- Fondo blanco personalizado -->

    <!-- Botón para ir a la actividad de personajes -->
    <Button
        android:id="@+id/btnPersonajes"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="@string/ver_personajes"
        android:textColor="@color/morado_fondo"
        android:textSize="18sp"
        android:textStyle="bold" /> <!-- Fondo blanco personalizado -->

</LinearLayout>