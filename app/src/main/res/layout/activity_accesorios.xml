<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".AccesoriosActivity">

    <!-- SearchView para la bÃºsqueda de accesorios -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewAccesorios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:queryHint="Buscar accesorios..." />

    <!-- RecyclerView para mostrar la lista de accesorios -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAccesorios"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />

</LinearLayout>